{
    "name": "heawie",
    "version": "1.4.0",
    "description": "Heawie - A minimal browser with the Heartbeat experience as home",
    "main": "main.js",
    "scripts": {
        "start": "set ELECTRON_RUN_AS_NODE=&& electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win --x64"
    },
    "keywords": [
        "heawie",
        "browser",
        "electron"
    ],
    "author": "Heawie",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.heawie.browser",
        "productName": "Heawie",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "signingHashAlgorithms": [
                "sha256"
            ],
            "sign": null
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        },
        "files": [
            "main.js",
            "preload.js",
            "renderer.js",
            "browser.html",
            "browser.css",
            "heartbeat/**/*",
            "assets/**/*"
        ]
    }
}